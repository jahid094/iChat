<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_and_register"
    tools:context=".PhoneLoginActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logo"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="150dp"
        android:id="@+id/logooo"

        android:scaleType="fitCenter"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="iChat - A Chatting Application"
        android:textAlignment="center"
        android:fontFamily="@font/scriptbl"
        android:layout_below="@+id/logooo"
        android:id="@+id/textchat"
        android:textSize="25sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/textchat">
    </View>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="280dp"
        android:padding="15dp">

        <Spinner
            android:id="@+id/spinnerCountries"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
/>

        <EditText
            android:id="@+id/phone_number_input"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_weight="2"
            android:digits="0123456789"
            android:hint="Write phone number here..."
            android:maxLength="10"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textAllCaps="false"/>

    </LinearLayout>

    <Button
        android:id="@+id/send_ver_code_button"
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:layout_below="@id/linearLayout"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/reg_btn_style"
        android:text="Send Verification Code"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textAllCaps="false"/>

</RelativeLayout>